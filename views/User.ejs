<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách đơn hàng</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <%- include('navbar.ejs') %>
    <div style="margin-left: 275px">
      <h3>Danh sách đơn hàng</h3>
      <table id="author-table">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">Mã khách hàng</th>
            <th scope="col">Mã sách</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Ngày đăng ký</th>
            <th scope="col">Ngày cập nhật</th>
          </tr>
        </thead>
        <tbody id="cart-tbody"></tbody>
      </table>
    </div>

    <script>
      const token = localStorage.getItem("token");
      fetch("/api/cart/get", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Authorization: `Bearer ${token}`, // Đảm bảo token hợp lệ
        },
        body: JSON.stringify({ page: 1, limit: 10 }),
      })
        .then((response) => response.json())
        .then((data) => {
          console.log("Dữ liệu nhận được từ API:", data);
          const cartTbody = document.getElementById("cart-tbody");

          if (data.status === "1" && data.data && data.data.data.length > 0) {
            const cartItems = data.data.data;
            cartTbody.innerHTML = cartItems
              .map((item, index) => {
                console.log(`Mã đơn hàng ${index + 1}: ${item.cart_id}`); // Log dữ liệu lên console
                return `
                    <tr>
                      <td>${index + 1}</td>
                      <td>${item.cart_id}</td>
                      <td>${item.user_id}</td>
                      <td>${item.book_id}</td>
                      <td>${item.quantity}</td>
                      <td>${item.status}</td>
                      <td>${new Date(
                        item.created_date
                      ).toLocaleDateString()}</td>
                      <td>${new Date(
                        item.modify_date
                      ).toLocaleDateString()}</td>
                    </tr>
                  `;
              })
              .join("");
          } else {
            cartTbody.innerHTML =
              "<tr><td colspan='8'>Không có dữ liệu đơn hàng</td></tr>";
          }
        })
        .catch((err) => console.error("Lỗi khi lấy dữ liệu giỏ hàng:", err));
    </script>
  </body>
</html>
