<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Notification</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .notification-image {
        max-width: 150px;
        max-height: 150px;
        object-fit: cover;
        border-radius: 5px;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow">
            <div class="card-header bg-primary text-white">
              <h3 class="mb-0">Create System Notification</h3>
            </div>
            <div class="card-body">
              <form id="notificationForm" onsubmit="return false;">
                <div class="mb-3">
                  <label for="title" class="form-label">Title:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="message" class="form-label">Message:</label>
                  <textarea
                    class="form-control"
                    id="message"
                    name="message"
                    rows="4"
                    required
                  ></textarea>
                </div>
                <div class="mb-3">
                  <label for="image" class="form-label"
                    >Image (optional):</label
                  >
                  <input
                    type="file"
                    class="form-control"
                    id="image"
                    name="image"
                    accept="image/*"
                  />
                </div>
                <button type="submit" class="btn btn-primary">
                  Create Notification
                </button>
              </form>
            </div>
          </div>

          <div class="card mt-4">
            <div class="card-header bg-success text-white">
              <h3 class="mb-0">System Notifications</h3>
            </div>
            <div class="card-body">
              <ul id="notificationsList" class="list-group"></ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      document
        .getElementById("notificationForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const title = document.getElementById("title").value;
          const message = document.getElementById("message").value;
          const image = document.getElementById("image").files[0];

          const formData = new FormData();
          formData.append("title", title);
          formData.append("message", message);
          if (image) {
            formData.append("image", image);
          }

          try {
            const response = await axios.post(
              "/notification/system",
              formData,
              {
                headers: {
                  "Content-Type": "multipart/form-data",
                },
              }
            );

            if (response.data.code === 0) {
              alert("Thông báo đã được tạo thành công");
              this.reset();
              loadNotifications();
            } else {
              alert(response.data.message || "Có lỗi xảy ra");
            }
          } catch (error) {
            console.error("Error:", error);
            alert(
              error.response?.data?.error || "Có lỗi xảy ra khi gửi thông báo"
            );
          }
        });

      async function loadNotifications() {
        try {
          const response = await axios.get("/notification/system");
          const notifications = response.data;

          const notificationsList =
            document.getElementById("notificationsList");
          notificationsList.innerHTML = "";

          notifications.forEach((notification) => {
            const li = document.createElement("li");
            li.classList.add("list-group-item");
            li.innerHTML = `
              <div class="d-flex">
                <div class="flex-grow-1">
                  <h5>${notification.title}</h5>
                  <p>${notification.message}</p>
                  ${
                    notification.imageUrl
                      ? `<img src="${notification.imageUrl}" class="notification-image"alt="Notification Image" />`
                      : ""
                  }
                </div>
                <button
                  class="btn btn-danger btn-sm ms-3"
                  onclick="deleteNotification(${notification.id})"
                >
                  Delete
                </button>
              </div>
            `;
            notificationsList.appendChild(li);
          });
        } catch (error) {
          console.error("Error loading notifications:", error);
        }
      }

      async function deleteNotification(id) {
        try {
          await axios.delete(`/notification/${id}`);
          alert("Thông báo đã được xóa");
          loadNotifications();
        } catch (error) {
          console.error("Error deleting notification:", error);
          alert("Có lỗi xảy ra khi xóa thông báo");
        }
      }

      document.addEventListener("DOMContentLoaded", loadNotifications);
    </script>
  </body>
</html>
