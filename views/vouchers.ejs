<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vouchers</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <style></style>
  <body>
    <%- include('navbar.ejs') %>
    <div style="margin-left: 280px">
      <div class="container mt-4">
        <h1 class="mb-4">Vouchers</h1>
        <form action="/admin/vouchers/search" method="get" class="mb-4">
          <div class="form-group">
            <label for="search">Search Vouchers</label>
            <input
              type="text"
              id="search"
              name="search"
              class="form-control"
              placeholder="Enter voucher code or description"
            />
          </div>
          <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <!-- Create Voucher Form -->
        <form action="/admin/vouchers/create" method="post" class="mb-4">
          <div class="form-group">
            <label for="code">Voucher Code</label>
            <input
              type="text"
              id="code"
              name="code"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input
              type="text"
              id="description"
              name="description"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="quantity">Quantity</label>
            <input
              type="number"
              id="quantity"
              name="quantity"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="validFrom">Valid From</label>
            <input
              type="date"
              id="validFrom"
              name="validFrom"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="validTo">Valid To</label>
            <input
              type="date"
              id="validTo"
              name="validTo"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="discountAmount">Discount Amount</label>
            <input
              type="number"
              step="0.01"
              id="discountAmount"
              name="discountAmount"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" class="form-control" required>
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
            </select>
          </div>
          <button
            type="submit"
            class="btn btn-primary"
            style="background-color: #ff7622"
          >
            Thêm Voucher
          </button>
        </form>

        <!-- Voucher List -->
        <table class="table table-bordered">
          <thead>
            <tr style="background-color: #ff7622; color: aliceblue">
              <th style="text-align: center">ID</th>
              <th style="text-align: center">Ngày tạo</th>
              <th style="text-align: center">Code</th>
              <th style="text-align: center">Description</th>
              <th style="text-align: center">Quantity</th>
              <th style="text-align: center">Valid From</th>
              <th style="text-align: center">Valid To</th>
              <th style="text-align: center">Discount Amount</th>
              <th style="text-align: center">Status</th>
              <th style="text-align: center">Is Expired</th>
              <th style="text-align: center">Chức năng</th>
            </tr>
          </thead>
          <tbody>
            <% vouchers.forEach(voucher => { %>
            <tr>
              <td><%= voucher.id %></td>
              <td><%= voucher.createdAt %></td>
              <td><%= voucher.code %></td>
              <td><%= voucher.description %></td>
              <td><%= voucher.quantity %></td>
              <td><%= voucher.validFrom %></td>
              <td><%= voucher.validTo %></td>
              <td><%= voucher.discountAmount %></td>
              <td><%= voucher.status %></td>
              <td><%= voucher.isExpired %></td>
              <td>
                <a
                  href="/admin/vouchers/edit/<%= voucher.id %>"
                  class="btn btn-warning btn-sm"
                  >Sửa</a
                >
                <form
                  action="/admin/vouchers/delete/<%= voucher.id %>"
                  method="post"
                  style="display: inline"
                >
                  <button type="submit" class="btn btn-danger btn-sm">
                    Xoá
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <script>
      const today = new Date().toISOString().split("T")[0];
      document.getElementById("validFrom").setAttribute("min", today);
    </script>
  </body>
</html>
