<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách đơn hàng</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Danh sách đơn hàng</h1>
    <% if (orders.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Mã đơn hàng</th>
            <th>Người dùng</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Tổng giá trị</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.userId %></td>
              <td><%= order.statusShip %></td>
              <td><%= order.createdAt %></td>
              <td><%= order.totalPrice %></td>
              <td>
                <form action="/update-status" method="post" class="form-inline">
                  <input type="hidden" name="orderId" value="<%= order.id %>">
                  <select name="status" class="form-control mr-2">
                    <option value="pending" <%= order.statusShip === 'pending' ? 'selected' : '' %>>Pending</option>
                    <option value="confirmed" <%= order.statusShip === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                    <option value="shipped" <%= order.statusShip === 'shipped' ? 'selected' : '' %>>Shipped</option>
                    <option value="delivered" <%= order.statusShip === 'delivered' ? 'selected' : '' %>>Delivered</option>
                    <option value="cancelled" <%= order.statusShip === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                  </select>
                  <button type="submit" class="btn btn-primary">Cập nhật</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Không có đơn hàng nào!</p>
    <% } %>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>