<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách đơn hàng</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Danh sách đơn hàng</h1>
    <% if (orders.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Mã đơn hàng</th>
            <th>Người dùng</th>
            <th>Trạng thái đơn hàng</th>
            <th>Ngày tạo</th>
            <th>Tổng giá trị</th>
            <th>Hành động</th>
            <th>Chi tiết</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.userId %></td>
              <td><%= order.statusShip %></td>
              <td><%= order.createdAt %></td>
              <td><%= order.totalPrice %></td>
              <td>
                <form action="/admin/update-status" method="post" class="form-inline status-form">
                  <input type="hidden" name="orderId" value="<%= order.id %>">
                  <select name="status" class="form-control mr-2">
                    <option value="pending" <%= order.statusShip === 'pending' ? 'selected' : '' %>>Chờ thanh toán</option>
                    <option value="wait_for_delivery" <%= order.statusShip === 'wait_for_delivery' ? 'selected' : '' %>>Chờ giao hàng</option>
                    <option value="delivered" <%= order.statusShip === 'delivered' ? 'selected' : '' %>>Đã giao hàng</option>
                  </select>
                  <button type="submit" class="btn btn-primary">Cập nhật</button>
                </form>
              </td>
              <td>
                <a href="/statistics/items/<%= order.id %>" class="btn btn-info">Chi tiết</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Không có đơn hàng nào!</p>
    <% } %>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.status-form').on('submit', function(e) {
        e.preventDefault();
        const form = $(this);
        $.ajax({
          url: form.attr('action'),
          method: form.attr('method'),
          data: form.serialize(),
          success: function(response) {
            alert('Cập nhật thành công!');
          },
          error: function() {
            alert('Cập nhật thất bại!');
          }
        });
      });
    });
  </script>
</body>
</html>
