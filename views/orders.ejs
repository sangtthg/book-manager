<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách đơn hàng</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Danh sách đơn hàng</h1>

    <form action="" method="GET" class="mb-4">
      <div class="form-row">
        <div class="col-md-3 mb-3">
          <input type="text" class="form-control" name="orderId" placeholder="ID đơn hàng" value="<%= currentOrderId %>">
        </div>
        <div class="col-md-3 mb-3">
          <input type="text" class="form-control" name="username" placeholder="Tên người dùng" value="<%= currentUsername %>">
        </div>
        <div class="col-md-3 mb-3">
          <select name="status" class="form-control">
            <option value="">Tất cả trạng thái</option>
            <option value="pending" <%= currentStatus === 'pending' ? 'selected' : '' %>>Đang xử lý</option>
            <option value="wait_for_delivery" <%= currentStatus === 'wait_for_delivery' ? 'selected' : '' %>>Chờ giao hàng</option>
            <option value="delivered" <%= currentStatus === 'delivered' ? 'selected' : '' %>>Đã giao hàng</option>
            <option value="cancelled" <%= currentStatus === 'cancelled' ? 'selected' : '' %>>Đã hủy</option>
            <option value="fail" <%= currentStatus === 'fail' ? 'selected' : '' %>>Lỗi</option>
          </select>
        </div>
        <div class="col-md-3 mb-3">
          <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
      </div>
    </form>


    <% if (orders.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Mã đơn hàng</th>
            <th>Người dùng</th>
            <th>Số điện thọai</th>
            <th>Địa chỉ</th>
            <th>Trạng thái đơn hàng</th>
            <th>Ngày tạo</th>
            <th>Tổng giá trị</th>
            <th>Mô tả trạng thái thanh toán</th>
            <th>Hành động</th>
            <th>Chi tiết</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.username %></td>
              <td><%= order.phone %></td>
              <td><%= order.address %></td>
              <td><%= order.statusShip %></td>
              <td><%= order.createdAt %></td>
              <td><%= order.totalPrice %></td>
              <td><%= order.payDescription %></td>
              <td>
                <% if (order.statusShip !== 'cancelled') { %>
                  <form action="/admin/update-status" method="post" class="form-inline status-form">
                    <input type="hidden" name="orderId" value="<%= order.id %>">
                    <select name="status" class="form-control mr-2">
                      <option value="pending" <%= order.statusShip === 'pending' ? 'selected' : '' %>>Đang xử lý</option>
                      <option value="wait_for_delivery" <%= order.statusShip === 'wait_for_delivery' ? 'selected' : '' %>>Chờ giao hàng</option>
                      <option value="delivered" <%= order.statusShip === 'delivered' ? 'selected' : '' %>>Đã giao hàng</option>
                      <option value="cancelled" <%= order.statusShip === 'cancelled' ? 'selected' : '' %>>Đã hủy</option>
                    </select>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                  </form>
                <% } else { %>
                  <span class="text-danger">Đã hủy</span>
                <% } %>
              </td>
              <td>
                <a href="/statistics/items/<%= order.id %>" class="btn btn-info">Chi tiết</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Không có đơn hàng nào!</p>
    <% } %>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.status-form').on('submit', function(e) {
        e.preventDefault();
        const form = $(this);
        const currentStatus = form.find('select[name="status"]').val();
        const orderId = form.find('input[name="orderId"]').val();
  
        $.ajax({
          url: form.attr('action'),
          method: form.attr('method'),
          data: form.serialize(),
          success: function(response) {
            alert('Cập nhật thành công!');
            
            // Cập nhật giao diện
            const row = form.closest('tr');
            row.find('td:eq(4)').text(getStatusText(currentStatus)); // Cập nhật cột trạng thái
  
            if (currentStatus === 'cancelled') {
              form.replaceWith('<span class="text-danger">Đã hủy</span>');
            } else {
              form.find('select[name="status"]').val(currentStatus);
            }
          },
          error: function() {
            alert('Cập nhật thất bại!');
          }
        });
      });
  
      function getStatusText(status) {
        const statusMap = {
          'pending': 'Đang xử lý',
          'wait_for_delivery': 'Chờ giao hàng',
          'delivered': 'Đã giao hàng',
          'cancelled': 'Đã hủy'
        };
        return statusMap[status] || status;
      }
    });
  </script>
</body>
</html>
